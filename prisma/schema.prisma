generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TeamSession {
  id            String   @id @default(cuid())
  sessionToken  String @unique
  team_id       String
  team          Team     @relation(fields: [team_id], references: [team_id], onDelete: Cascade)
  expires       DateTime
  createdAt     DateTime @default(now())

  @@index([team_id])
}

model Team {
  team_id      String        @id @default(cuid())
  team_name    String        @unique
  country      String
  university   String
  phone_number String
  line_id      String
  password     String
  proposal_url String?
  role         Role          @default(USER)
  members      Member[]
  teamSession  TeamSession[]
}

model Member {
  member_id String @id @default(cuid())
  name      String
  team_id   String
  team      Team   @relation(fields: [team_id], references: [team_id])
}

enum Role {
  ADMIN
  USER
}
